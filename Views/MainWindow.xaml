<Window x:Class="Wpf_MVVM_Template.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello World WPF" Height="200" Width="400">
  <Grid>
    <TextBlock Text="{Binding Message}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
    <Button Content="Click Me" Command="{Binding ShowMessageCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>
  </Grid>
</Window>